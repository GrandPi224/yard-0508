    }
    h1, h2 {
      text-align: center;
    }
    .question {
      margin-bottom: 2rem;
    }
    .options button {
      display: block;
      width: 100%;
      margin: 0.5rem 0;
      padding: 0.75rem;
      border: 1px solid #ccc;
      border-radius: 5px;
      background: #f1f1f1;
      cursor: pointer;
    }
    .options button.correct {
      background-color: #c8e6c9;
    }
    .options button.incorrect {
      background-color: #ffcdd2;
    }
    .explanation {
      display: none;
      margin-top: 0.5rem;
      font-style: italic;
      color: #555;
    }
    .result {
      font-weight: bold;
      margin-top: 2rem;
      text-align: center;
    }
    button.reset {
      display: block;
      margin: 2rem auto 0;
      padding: 0.75rem 1.5rem;
      background: #1e40af;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }
